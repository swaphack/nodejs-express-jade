doctype html
html
    head
        title Login
        include ../libclient
        script(type="text/javascript", src="sample/js/login.js")
        link(type="text/css", rel="stylesheet", href="sample/css/login.css")
    body
        div#left
        div#center
            form#login_form
                table
                    tr#block_username
                        td username
                        td
                            input#username(type="text")
                    tr#block_password
                        td password
                        td
                            input#password(type="password")
                    tr#block_confirm_password
                        td confirm password
                        td
                            input#confirm_password(type="password")
                    tr
                        td(colspan=2)
                            input#signUp(type="button" value="sign up")
        div#right


